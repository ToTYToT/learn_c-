5. 实现一个String类，保证main函数对正确执行
class String
{
	public:
		String();
		String(const char *pstr);
		String(const String & rhs);
		String & operator=(const String & rhs);
		~String();

		void print();

	private:
		char * _pstr;
};

int main(void)
{
	String str1;
	str1.print();

	String str2 = "Hello,world";
	String str3 = "wangdao";

	str2.print();str2
		str3.print();
	str2 = str3;
	str2.print();print

		String str4 = str3;
	str4.print();
	return 0;
}

